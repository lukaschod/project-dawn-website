---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";
import Projects from "../components/sections/Projects.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import ReviewSection from '../components/sections/ReviewSection.astro';
import GlowLineSeparator from "../components/ui/separator/GlowLineSeparator.astro";
---


<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead title="Portfolio | Project Dawn" description="Selected projects and playbooks" />
  </head>
  <body>
    <Header />
    <main>
      <HeroSection title="Selected Projects" subtitle="A few selected Asset Store packages." showCTA primaryCTA={{ text: 'Full Portfolio', href: 'https://assetstore.unity.com/publishers/62140' }}  />
      <Projects />
      <ReviewSection/>
      <GlowLineSeparator />
    </main>
    <Footer />
  </body>
</html>


