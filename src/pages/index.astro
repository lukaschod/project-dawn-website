---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/sections/Footer.astro';
import Header from '../components/sections/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import HeroSection from '../components/sections/HeroSection.astro';
import SkillsSection from '../components/sections/SkillsSection.astro';
import { skills } from '../data/skills';
import WorkExperience from '../components/sections/WorkExperience.astro';
import { work } from '../data/work';
import Studies from '../components/sections/Studies.astro';
import { studies } from '../data/studies';
import Carousel from '../components/ui/carousel/Carousel.astro';
import { logos } from '../data/logos';
import ArrowSeparator from '../components/ui/separator/ArrowSeparator.astro'
import GlowLineSeparator from '../components/ui/separator/GlowLineSeparator.astro'

import ReviewSection from '../components/sections/ReviewSection.astro';
import HeroSection2 from '../components/sections/HeroSection2.astro';
import HeroSwipeSection from '../components/sections/HeroSwipeSection.astro';
import heroBg from "../assets/images/space-marine.png?url";
import blogHeroBG from "../assets/images/adaptive-split-screen.png?url";
import blogHeroBG2 from "../assets/images/turbo-live.png?url";
import blogHeroBG3 from "../assets/images/darfall.png?url";
import blogHeroBG4 from "../assets/images/rogue-pinatas.png?url";
import blogHeroBG5 from "../assets/images/highland-keep.png?url";

// Logos
import astroLogo from '../assets/logos/Astro-logo.svg';
import googleAdsLogo from '../assets/logos/GoogleAds-logo.svg';
import posthogLogo from '../assets/logos/posthog-logo.svg';
import notionLogo from '../assets/logos/Notion-logo.svg';
import figmaLogo from '../assets/logos/Figma-logo.svg';

// skills are imported from src/data/skills
---

<!doctype html>
<html lang="en" data-theme="dark" class="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <!-- JSON-LD: Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'Site Author',
      url: new URL('/', Astro.site).toString(),
      logo: new URL('/favicon.svg', Astro.site).toString(),
      sameAs: [
        'https://x.com/guihubie',
        'https://www.linkedin.com/in/guilherme-hubie/',
      ],
    })} />

	</head>
	<body>
		<Header />

    <HeroSwipeSection
      title="Building High-Quality Unity Tools"
      subtitle="Creating Unity packages for games. Each package is built to seamlessly integrate with the Unity engine, featuring a clear, well-documented architecture, leveraging the DOTS tech stack for performance, and designed for user extensibility."
      heroBgs={[
        blogHeroBG5,
        blogHeroBG3,
        blogHeroBG2,
        blogHeroBG,
        blogHeroBG4,
      ]}
      primaryCTA={{ text: 'View Projects', href: '/project-dawn-website/portfolio' }}
      secondaryCTA={{ text: 'Discord', href: 'https://discord.gg/uZJGzN253D' }}
      interval={5000}
    />

    <ReviewSection/>

    <HeroSection2
      heroBg={heroBg}
      title="Providing Contract Work"
      subtitle="I provide contract services to studios, specializing in engine development, game-related systems, and graphics API implementation. I also offer Unity consultations, sharing best practices, optimizing performance, and helping teams get the most out of the engine."
      primaryCTA={{ text: 'Contact', href: '#contact' }}
    />



		<main>
      <GlowLineSeparator />
		</main>

		<Footer />
	</body>
</html>
