---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/sections/Footer.astro';
import Header from '../components/sections/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import HeroSection from '../components/sections/HeroSection.astro';
import SkillsSection from '../components/sections/SkillsSection.astro';
import { skills } from '../data/skills';
import WorkExperience from '../components/sections/WorkExperience.astro';
import { work } from '../data/work';
import Studies from '../components/sections/Studies.astro';
import { studies } from '../data/studies';
import Carousel from '../components/ui/carousel/Carousel.astro';
import { logos } from '../data/logos';
import ArrowSeparator from '../components/ui/separator/ArrowSeparator.astro'
import GlowLineSeparator from '../components/ui/separator/GlowLineSeparator.astro'

import ReviewSection from '../components/sections/ReviewSection.astro';
import HeroSection2 from '../components/sections/HeroSection2.astro';
import HeroSwipeSection from '../components/sections/HeroSwipeSection.astro';

import heroBg from "../assets/images/space-marine.png?url";
import spaceMarineCapsule from "../assets/images/space-marine-capsule.jpg?url";

import iBorrow from "../assets/images/i-borrow.png?url";
import iBorrowCapsule from "../assets/images/i-borrow-capsule.jpg?url";

import turboLive from "../assets/images/turbo-live.png?url";
import turboLiveCapsule from "../assets/images/turbo-live-capsule.jpg?url";

import darfall from "../assets/images/darfall.png?url";
import darfallCapsule from "../assets/images/darfall-capsule.jpg?url";

import roguePinatas from "../assets/images/rogue-pinatas.png?url";
import roguePinatasCapsule from "../assets/images/rogue-pinatas-capsule.jpg?url";

import highlandKeep from "../assets/images/highland-keep.png?url";
import highlandKeepCapsule from "../assets/images/highland-keep-capsule.jpg?url";

import pekla from "../assets/images/pekla.png?url";
import peklaCapsule from "../assets/images/pekla-capsule.jpg?url";

import cosmicBlastards from "../assets/images/cosmic-blastards.png?url";
import cosmicBlastardsCapsule from "../assets/images/cosmic-blastards-capsule.jpg?url";

// skills are imported from src/data/skills
---

<!doctype html>
<html lang="en" data-theme="dark" class="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <!-- JSON-LD: Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'Site Author',
      url: new URL('/', Astro.site).toString(),
      logo: new URL('/favicon.svg', Astro.site).toString(),
      sameAs: [
        'https://x.com/guihubie',
        'https://www.linkedin.com/in/guilherme-hubie/',
      ],
    })} />

	</head>
	<body>
		<Header />

    <HeroSwipeSection
      title="Building High-Quality Unity Tools"
      subtitle="Creating Unity packages for games. Each package is built to seamlessly integrate with the Unity engine, featuring a clear, well-documented architecture, leveraging the DOTS tech stack for performance, and designed for user extensibility."
      slides={[
        { bg: highlandKeep, steamCapsule: highlandKeepCapsule, steamLink: "https://store.steampowered.com/app/3107870/Highland_Keep/" },
        { bg: darfall, steamCapsule: darfallCapsule, steamLink: "https://store.steampowered.com/app/1961600/Darfall/" },
        { bg: turboLive, steamCapsule: turboLiveCapsule, steamLink: "https://store.steampowered.com/app/2994920/Turbo_Live/" },
        { bg: pekla, steamCapsule: peklaCapsule, steamLink: "https://store.steampowered.com/app/3505140/Pekla/" },
        { bg: iBorrow, steamCapsule: iBorrowCapsule, steamLink: "https://store.steampowered.com/app/1551020/I_Borrow/" },
        { bg: roguePinatas, steamCapsule: roguePinatasCapsule, steamLink: "https://store.steampowered.com/app/2700990/Rogue_Piatas_VRmageddon/" },
        { bg: cosmicBlastards, steamCapsule: cosmicBlastardsCapsule, steamLink: "https://store.steampowered.com/app/2682480/Cosmic_Blastards/" },
      ]}
      primaryCTA={{ text: "View Projects", href: "/project-dawn-website/portfolio" }}
      secondaryCTA={{ text: "Discord", href: "https://discord.gg/uZJGzN253D" }}
      interval={5000}
    />

    <ReviewSection/>

    <HeroSection2
      heroBg={heroBg}
      title="Providing Contract Work"
      subtitle="I provide contract services to studios, specializing in engine development, game-related systems, and graphics API implementation. I also offer Unity consultations, sharing best practices, optimizing performance, and helping teams get the most out of the engine."
    />



		<main>
      <GlowLineSeparator />
		</main>

		<Footer />
	</body>
</html>
