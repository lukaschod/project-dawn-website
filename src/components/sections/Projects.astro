---
import Button from "../ui/button/Button.astro";
import { projects } from "../../data/projects";

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-10">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-8 text-foreground">{title}</h2>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {projects.map((p) => (
        <article class="card-surface p-6 relative">
          <h3 class="text-xl font-semibold text-foreground m-0">{p.title}</h3>

          {p.tags && p.tags.length > 0 && (
                  <div class="mt-3 flex flex-wrap gap-2">
                    {p.tags.map((tech) => (
                      <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-medium" style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 1px solid rgba(var(--accent-rgb),0.3);">
                        {tech}
                      </span>
                    ))}
                  </div>
                )}

          <p class="mt-3 text-[color:var(--color-text-secondary)]">{p.description}</p>

          {p.youtube && (
            <div class="mt-4 aspect-video">
              <iframe 
                src={`https://www.youtube.com/embed/${p.youtube}`}
                class="w-full h-full rounded-xl"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            </div>
          )}

          {p.references && p.references.length > 0 && (
            <div class="mt-3">
              <span
                class="inline-flex flex-wrap gap-1 items-center rounded-full px-3 py-1 text-xs font-medium"

              >
                {p.references.map((reference, index) => (
                  <a
                    key={index}
                    href={reference || '#'}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="underline"
                  >
                    {reference}
                  </a>
                )).reduce((prev, curr) => [prev, ', ', curr])}
              </span>
            </div>
          )}

          <div class="mt-6 flex justify-center gap-4">
            {p.assetStore && (
              <Button href={p.assetStore} variant="primary" size="sm">{"Asset Store â†’"}</Button>
            )}
            {p.documentation && (
              <Button href={p.documentation} variant="secondary" size="sm">{"Documentation"}</Button>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
